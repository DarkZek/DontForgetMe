<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #D3FFBF;
		background-image: url('../assets/background.png');
		background-size: 180px;
		font-family: 'Jua', sans-serif;
		overflow-x: hidden;
	}

	button, .button {
		background-color: #17C23C;
		box-shadow: 1px 2px 0px 0px rgba(0, 0, 0, 0.25);
		padding: 12px 24px;
		border-radius: 8px;
		border: none;
		color: white;
		font-family: 'Jua', sans-serif;
		font-size: 18px;
		cursor: pointer;
		text-decoration: none;
	}


    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 800px;
        margin: auto;
        background-color: #d3ffbfd4;
        min-height: 100vh;
        max-width: 100vw;
        padding-bottom: 24px;

        .main-content {
            padding: 16px 16px 48px 16px;
            min-height: calc(100vh - 120px);
            max-width: calc(100% - 32px);

			display: flex;
			flex-direction: column;
			align-items: center;
        }
    }

	.quote {
		color: #114C0B;
	}
